                        </g>
                    </g>
            </svg>
        </div>
    </div>

            
    <div class="name"><p>{{ user.name }}</p><a href="/student/logout">Logout</a></div>
    <div class="requests" style="cursor: pointer;"><img src="/assets/images/books.svg" alt="" height="30px" width="30px"></div>

    </nav>

    <div class="requests-div">
      <div class="requests-close-div">
        <img src="/assets/images/x-mark.svg" alt="" height="30px" id="close">
      </div>
      <div class="requests-div-inner">
        {% for request in requests %}
          <div class="request">
            <div class="book-image">
              <img src="/assets/images/uploads/{{request.image}}" alt="">
            </div>
            <div class="book-inner">
              <div class="book-info">
                <h3>{{request.name }}</h3>
                <h3>Author- {{request.author}}</h3>
                <h3>Genre- {{request.genre}}</h3>
                <p>Transaction ID- {{request.id}}</p>
                <p style="color: green;">Status - {{request.status}} </p>
              </div>
              {% if request.status=="pending" %}
              <div class="checkout">
                <a href="cancel?id={{request.id}}" class="checkout-btn">Cancel Request</a>
              </div>
              {% endif %}
            </div>
          </div>
          {% endfor %}
      </div>
    </div>
  <div class="overlay-main"></div>
  
    <section class="main">
      <div class="main-inner">
        {% for book in books %}
        <div class="book">
          <div class="book-image">
            <img src="/assets/images/uploads/{{book.image}} " alt="">
          </div>
          <div class="book-inner">
            <div class="book-info">
              <h2>{{book.name}}</h2>
              <h3>Author- {{book.author}}</h3>
              <h3>Genre- {{book.genre}}</h3>
              <p>Available Quantity- {{book.quantity}}</p>
            </div>
            <div class="checkout">
              <a href="/student/checkout?id={{book.id}}" class="checkout-btn">Request Issue</a>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </section>
</body>
<script src="/assets/scripts/search.js"></script>
</html>