{% extends "templates/teacherbase.twig" %}

{% block title %} Add Book {% endblock %}

{% block styles %} 
    <link rel="stylesheet" href="/assets/styles/addBook.css" type="text/css"/>
{% endblock %}

{% block body %}
  <div class="overlay-main"></div>
    <section class="main">
        <form class="main-inner" method="POST" enctype="multipart/form-data">
            <h3>Add New Book</h3>
            <div class="form-input">
                <label for="book-name">Book Name</label>
                <input type="text" name="bookName" placeholder="Enter Book name" required>
            </div>
            <div class="form-input">
                <label for="author-name">Author Name</label>
                <input type="text" name="authorName" placeholder="Enter Author name" required>
            </div>            
            <div class="form-input">
                <label for="genre">Book Genre</label>
                <input type="text" name="genre" placeholder="Genre (enter space separated values in case of multiple)" required>
            </div>            
            <div class="form-input">
                <label for="quantity">Quantity</label>
                <input type="number" name="quantity" placeholder="Quantity" min="0" required>
            </div>
            <div class="form-input">
                <label for="image">Image</label>
                <input type="file" name="image" placeholder="Quantity" accept=".jpg,.png,.jpeg" required>
            </div>
            <div class="form-input">
                <input type="submit" value="Add" class="btn">
            </div>
        </form>
    </section>
{% endblock %}

{% block scripts %}
<script src="/assets/scripts/search-t.js"></script>
{% endblock %}
